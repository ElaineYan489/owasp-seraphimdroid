<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/article_item_margin"
        android:layout_marginRight="@dimen/article_item_margin"
        android:layout_marginTop="@dimen/article_item_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/article_item_padding_top"
        android:paddingTop="@dimen/article_item_padding_top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/article_item_padding_side"
            android:paddingRight="@dimen/article_item_padding_side" >

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/article_item_padding_side"
                    android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/article_item_category_pad_side"
            android:paddingRight="@dimen/article_item_category_pad_side"
            android:paddingTop="@dimen/article_item_category_pad_top" />

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:paddingBottom="@dimen/article_item_margin"
            android:paddingLeft="@dimen/article_item_category_pad_side"
            android:paddingRight="@dimen/article_item_category_pad_side" />

    </LinearLayout>

</LinearLayout>